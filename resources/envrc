#
# Check if a localhost Nexus is configured
# And launchd it if needed. 
#
if [ -a /tmp/nexus.usedby ]; then
 export SBT_OPTS="-Dsbt.override.build.repos=true"
 echo "ðŸ‘Œ Nexus is already started ... ["
 grep  nexus-maven-public  ~/.sbt/repositories
 echo "]"
 export NEXUS=http://localhost:8081
else
 SBT_NEXUS_ENTRIES=`grep -c  nexus ~/.sbt/repositories`
 if [ $SBT_NEXUS_ENTRIES -gt 0 ]; then
  echo
  echo "ðŸ’ª Congratulation, your are using a repository manager to save the planet! ðŸ’ª" 
  echo
  echo -n "âœ¨ Want to start Nexus [y/N]â“:"
  echo
  read -s -t 4 REPLY
  if [[ $REPLY =~ ^[Yy]$ ]]
  then
    export SBT_OPTS="-Dsbt.override.build.repos=true"
    echo "ðŸš€ Stating Nexus ..."
    nc -w 2 localhost 8888
    echo $USER >> /tmp/nexus.usedby
    export NEXUS=http://localhost:8081
  else 
    echo "ðŸ™€ Not stating Nexus, don't try to build any things ..."  
  fi
 fi
fi
